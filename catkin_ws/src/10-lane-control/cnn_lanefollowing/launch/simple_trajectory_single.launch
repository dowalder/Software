<launch>
    <arg name="veh" doc="Name of vehicle. ex: megaman"/>
    <arg name="local" default="false"
         doc="true for running everything you possibly can on laptop. false for everything running on vehicle."/>

    <include file="$(find duckietown)/machines"/>

    <group ns="$(arg veh)">
        <!-- run local -->
        <node if="$(arg local)" pkg="cnn_lanefollowing" type="tester.py" name="simple_traj"
              output="screen" clear_params="true" required="true">
        </node>

        <!-- run remote -->
        <node unless="$(arg local)" machine="$(arg veh)" pkg="cnn_lanefollowing" type="tester.py"
              name="simple_traj" output="screen" clear_params="true" required="true">
        </node>
    </group>
</launch>

